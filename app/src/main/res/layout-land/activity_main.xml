<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.vfrin.valentijnfrinking_pset1.MainActivity">

    <Switch
        android:text="@string/nose_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/switch2"
        android:layout_above="@+id/switch1"
        android:layout_alignRight="@+id/switch3"
        android:layout_alignEnd="@+id/switch3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Switch
        android:text="@string/ears_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/switch4"
        android:layout_above="@+id/switch3"
        android:layout_alignRight="@+id/switch3"
        android:layout_alignEnd="@+id/switch3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Switch
        android:text="@string/mouth_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/switch3"
        android:layout_above="@+id/switch2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Switch
        android:text="@string/eyes_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/switch1"
        android:layout_marginBottom="12dp"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/switch4"
        android:layout_alignStart="@+id/switch4"
        android:layout_alignRight="@+id/switch2"
        android:layout_alignEnd="@+id/switch2" />

    <Switch
        android:text="@string/shoes_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/switch5"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/switch6"
        android:layout_alignLeft="@+id/switch7"
        android:layout_alignStart="@+id/switch7" />

    <Switch
        android:text="@string/arms_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/switch6"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/switch7"
        android:layout_alignLeft="@+id/switch8"
        android:layout_alignStart="@+id/switch8" />


    <Switch
        android:text="@string/eyebrow_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/switch7"
        android:id="@+id/switch8"
        android:layout_alignLeft="@+id/switch9"
        android:layout_alignStart="@+id/switch9"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Switch
        android:text="@string/glasses_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/switch8"
        android:id="@+id/switch9"
        android:layout_alignLeft="@+id/switch10"
        android:layout_alignStart="@+id/switch10"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Switch
        android:text="@string/hat_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/switch5"
        android:layout_above="@+id/switch4"
        android:layout_alignLeft="@+id/switch4"
        android:layout_alignStart="@+id/switch4"
        android:layout_alignRight="@+id/switch4"
        android:layout_alignEnd="@+id/switch4" />

    <Switch
        android:text="@string/mustache_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/switch10"
        android:layout_below="@+id/switch9"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/body"
        android:id="@+id/imageView"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/switch2"
        android:layout_toEndOf="@+id/switch2" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/arms"
        android:id="@+id/imageView2"
        android:visibility="invisible"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/switch2"
        android:layout_toEndOf="@+id/switch2" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ears"
        android:visibility="invisible"
        android:id="@+id/imageView3"
        android:clickable="false"
        android:layout_alignBottom="@+id/switch1"
        android:layout_toRightOf="@+id/switch2"
        android:layout_toEndOf="@+id/switch2"
        android:layout_marginBottom="11dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/eyebrows"
        android:visibility="invisible"
        android:id="@+id/imageView4"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/switch2"
        android:layout_toEndOf="@+id/switch2"
        android:layout_marginTop="15dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/eyes"
        android:visibility="invisible"
        android:id="@+id/imageView5"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/switch2"
        android:layout_toEndOf="@+id/switch2" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/glasses"
        android:visibility="invisible"
        android:id="@+id/imageView6"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/switch2"
        android:layout_toEndOf="@+id/switch2" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/hat"
        android:visibility="invisible"
        android:id="@+id/imageView7"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/switch5"
        android:layout_toEndOf="@+id/switch5" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/mouth"
        android:id="@+id/imageView8"
        android:visibility="invisible"
        android:layout_alignTop="@+id/imageView4"
        android:layout_toRightOf="@+id/switch2"
        android:layout_toEndOf="@+id/switch2" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/nose"
        android:id="@+id/imageView9"
        android:visibility="invisible"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/switch2"
        android:layout_toEndOf="@+id/switch2" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/mustache"
        android:visibility="invisible"
        android:id="@+id/imageView10"
        android:layout_alignBottom="@+id/switch1"
        android:layout_toRightOf="@+id/switch2"
        android:layout_toEndOf="@+id/switch2" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/shoes"
        android:id="@+id/imageView11"
        android:visibility="invisible"
        android:layout_alignBottom="@+id/switch1"
        android:layout_toRightOf="@+id/switch2"
        android:layout_toEndOf="@+id/switch2" />

    <TextView
        android:text="MR POTATO HEAD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="50dp"
        android:id="@+id/textView2"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
